#Update contacts with thier name 
UPDATE AddressBook
SET City = 'NAGPUR'
WHERE FirstName = 'RIYA';
SELECT * FROM AddressBook;
#Delete contacts
DELETE FROM AddressBook
WHERE FirstName = 'RIYA';
SELECT * FROM AddressBook;
#Retrieve a Person
SELECT * FROM AddressBook
WHERE City = 'PUNE' OR State = 'MAHARASHTRA';

